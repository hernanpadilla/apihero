{
  "version": 2,
  "builds": [
    {
      "src": "server.js",  
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"  // Corrige la ruta al servidor
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1" // Sirve archivos est√°ticos
    }
  ]
}
